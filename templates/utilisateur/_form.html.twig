{{ form_start(form) }}


<div class="row">
    <div class="col-lg-6 col-sm-12">
        {{ form_row(form.nom) }}
    </div>
    <div class="col-lg-6 col-sm-12">
        {{ form_row(form.prenom) }}
    </div>
</div>
<div class="row">
    <div class="col-lg-6 col-sm-12">
        {{ form_row(form.email) }}
    </div>
    <div class="col-lg-6 col-sm-12">
        {{ form_row(form.telephone) }}
    </div>
</div>
<div class="row">
    <div class="col-lg-6 col-sm-12">
        {{ form_row(form.username,{ 'label': 'Nom d\'dutilisateur'}) }}
    </div>
    <div class="col-lg-6 col-sm-12">
        {{ form_row(form.password,{ 'label': 'Mot de passe'}) }}
    </div>
</div>
<div class="row">
    <div class="col-lg-6 col-sm-12">
        {{ form_row(form.adresse.codePostal) }}
    </div>
    <div class="col-lg-6 col-sm-12">
        {{ form_row(form.adresse.numero) }}
    </div>
</div>
<div class="row">
    <div class="col-lg-6 col-sm-12">
        {{ form_row(form.adresse.rue) }}
    </div>
    <div class="col-lg-6 col-sm-12">
        {{ form_row(form.adresse.ville) }}
    </div>
</div>
<div class="row">
    <div class="col-lg-6 col-sm-12">
        {{ form_row(form.adresse.pays) }}
    </div>

</div>
{{ form_widget(form) }}
<div style="float: right;" class="col-2 actions text-right">
    <button class="btn btn-primary " class="btn"><i class="far fa-save"></i></button>
</div>
{{ form_end(form) }}

