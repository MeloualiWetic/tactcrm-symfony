
{{ form_start(form) }}
<div class="container-fluid dashboard-div">
	<div class="row">
		<div class="col-lg-6 col-sm-12">
			{{ form_row(form.utilisateur) }}
		</div>
		<div class="col-lg-6 col-sm-12">
			{{ form_row(form.sujet) }}
		</div>

	</div>
	<div class="row">
		<div class="col-lg-6 col-sm-12">
			{{ form_row(form.dateDebut,{ 'label': 'Date Debut'}) }}
		</div>
		<div class="col-lg-6 col-sm-12">
			{{ form_row(form.dateFin,{ 'label': 'Date Fin'}) }}
		</div>
    
	</div>

	<div class="row">
		<div class="col-sm-12">
			{{ form_row(form.typeContrat) }}
		</div>
		<div class="col-sm-12">
			{{ form_row(form.description) }}
		</div>

	</div>


	{{ form_widget(form) }}
	<div style="float: right;" class="col-2 actions text-right">
		<br>
		<button class="btn btn-primary">
			<i class="far fa-save"></i>
		</button>
	</div>
</div>
{{ form_end(form) }}
