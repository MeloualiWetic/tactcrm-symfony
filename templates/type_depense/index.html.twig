{% extends 'base.html.twig' %}

{% block title %}Type Depense index
{% endblock %}

{% block body %}
	<div class="container-fluid">
	<br>

		<div class="row top-actions">
			<div class="col-8 top-header">
				<h4>Liste des Type Depense</h4>
			</div>
			<div class="col-4 actions text-right">
				<a class="btn btn-primary" href="{{ path('type_depense_new') }}">
					<i class="fas fa-plus"></i>
				</a>
			</div>
		</div>
		<div class="card-body">
			<table id="type-depense-table" class="table table-bordered table-hover respensive-tbls">
				<thead>
					<tr>
						<th>Nom</th>
						<th>Description</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for type_depense in type_depenses %}
						<tr>
							<td>{{ type_depense.nom }}</td>
							<td>{{ type_depense.description }}</td>
							<td>
							<a class="btn btn-info" href="{{ path('type_depense_show', {'id': type_depense.id}) }}"><i class="fas fa-eye"></i></a>
                            <a class="btn btn-warning" href="{{ path('type_depense_edit', {'id': type_depense.id}) }}"><i class="fas fa-edit"></i></a>
							{{ include('type_depense/_delete_form.html.twig') }}

							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
