{% extends 'base.html.twig' %}

{% block title %}Taxe index
{% endblock %}

{% block body %}
	<div class="container-fluid">
	<br>
		<div class="row top-actions">
			<div class="col-8 top-header">
				<h4>Liste des Taxes</h4>
			</div>
			<div class="col-4 actions text-right">
				<a class="btn btn-primary" href="{{ path('taxe_new') }}">
					<i class="fas fa-plus"></i>
				</a>
			</div>
		</div>

		<div class="card-body">
			<table  class="table table-bordered table-hover respensive-tbls" >
				<thead>
					<tr>
						<th>Nom</th>
						<th>Taux</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for taxe in taxes %}
						<tr>
							<td>{{ taxe.nom }}</td>
							<td>{{ taxe.taux }}</td>
							<td>
							<a class="btn btn-info" href="{{ path('taxe_show', {'id': taxe.id}) }}"><i class="fas fa-eye"></i></a>
                            <a class="btn btn-warning" href="{{ path('taxe_edit', {'id': taxe.id}) }}"><i class="fas fa-edit"></i></a>
							{{ include('taxe/_delete_form.html.twig') }}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
